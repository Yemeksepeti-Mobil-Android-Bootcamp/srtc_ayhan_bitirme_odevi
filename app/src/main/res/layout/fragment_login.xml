<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F8A39D">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:fontFamily="@font/josefinsans_medium"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="88sp"
        android:layout_marginBottom="32sp"
        android:textColor="#FFFFFF"
        android:textSize="28sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="with email"
        android:fontFamily="@font/josefinsans_medium"
        android:textAlignment="center"
        android:textColor="#80FFFFFF"
        android:textSize="14sp"
        android:layout_marginBottom="24sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="48sp"
        app:cardCornerRadius="15dp"
        android:paddingStart="24sp"
        android:layout_marginStart="24sp"
        android:layout_marginEnd="24sp"
        android:layout_marginBottom="22sp"
        android:backgroundTint="#F0F0F0">

        <EditText
            android:id="@+id/editTextEmailAdress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00000000"
            android:fontFamily="@font/josefinsans_medium"
            android:hint="Your email"
            android:paddingStart="20sp"
            android:paddingTop="16sp"
            android:textColor="#80031925"
            android:textSize="14sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:paddingStart="24sp"
        app:cardCornerRadius="15dp"
        android:layout_marginStart="24sp"
        android:layout_marginEnd="24sp"
        android:layout_marginBottom="22sp"
        android:backgroundTint="#F0F0F0">

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20sp"
            android:paddingTop="16sp"
            android:paddingBottom="16sp"
            android:textSize="14sp"
            android:hint="Password"
            android:fontFamily="@font/josefinsans_medium"
            android:inputType="textPassword"
            android:textColor="#80031925"
            android:backgroundTint="#00000000" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password ?"
        android:fontFamily="@font/josefinsans_medium"
        android:paddingRight="24sp"
        android:paddingBottom="24sp"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_Button"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24sp"
        android:layout_marginEnd="24sp"
        android:text="Log in"
        android:fontFamily="@font/josefinsans_medium"
        android:textSize="16sp"
        android:layout_marginBottom="120sp"
        android:textColor="@color/white"
        android:background="@drawable/button" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
        android:fontFamily="@font/josefinsans_medium"
        android:textSize="14sp"
        android:layout_marginBottom="20sp"
        android:textAlignment="center"
        android:textColor="#80FFFFFF" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signUpButton"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:fontFamily="@font/josefinsans_medium"
        android:layout_marginStart="24sp"
        android:layout_marginEnd="24sp"
        android:textSize="16sp"
        android:textColor="#031925"
        android:background="@drawable/button"
        android:backgroundTint="#FFFFFF" />


</LinearLayout>